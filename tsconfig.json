{
  "include": [
    "./js"
  ],
  "compilerOptions": {
    "rootDir": "./js",
    "outDir": "./ts-bin",
    "target": "ES2015",
    "module": "es2015",
    "lib": [
      "es6",
      "es5",
      "dom",
      "scripthost"
    ],
    "jsx": "react",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./typings"
    ]
  }
}